@model UpdateProductViewModel

<h1>Update Product !!</h1>
<hr />
<form asp-action="Update">
    <input  asp-for="ID" type="hidden"/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="label-contol" asp-for="Name"></label><br />
                <input required class="form-control" asp-for="Name"/>
            </div>
            <div class="form-group">
                <label class="label-contol" asp-for="Price"></label><br />
                <input required class="form-control" asp-for="Price"/>
            </div>
        </div>
    </div><br />
    <input class="btn btn-primary" type="submit" value="Save" />
    <a asp-controller="Category" asp-action="index" class="btn btn-danger">Back</a>
</form>